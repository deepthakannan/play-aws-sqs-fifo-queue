    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch Producer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildproducer",
            "program": "${workspaceFolder}/producer/bin/Debug/netcoreapp2.2/producer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/producer",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": ".NET Core Launch Consumer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildconsumer",
            "program": "${workspaceFolder}/consumer/bin/Debug/netcoreapp2.2/consumer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/consumer",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}